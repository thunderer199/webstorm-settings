<application>
  <component name="LanguageInjectionConfiguration">
    <injection language="HTML" injector-id="xml">
      <display-name>div</display-name>
      <place><![CDATA[xmlTag().withLocalName(string().equalTo("div"))]]></place>
    </injection>
    <injection language="HTML" injector-id="xml">
      <display-name>div</display-name>
      <place><![CDATA[xmlTag().withLocalName(string().equalTo("div")).withNamespace(string().equalTo("http://www.w3.org/1999/html"))]]></place>
    </injection>
    <injection language="RegExp" injector-id="xml">
      <display-name>div/@term-template</display-name>
      <place><![CDATA[xmlAttribute().withLocalName(string().equalTo("term-template")).withParent(xmlTag().withLocalName(string().equalTo("div")).withNamespace(string().equalTo("http://www.w3.org/1999/html")))]]></place>
    </injection>
    <injection language="HTML" injector-id="xml">
      <display-name>section</display-name>
      <place><![CDATA[xmlTag().withLocalName(string().equalTo("section"))]]></place>
    </injection>
    <injection language="CSS" injector-id="xml">
      <display-name>style</display-name>
      <place><![CDATA[xmlTag().withLocalName(string().equalTo("style"))]]></place>
    </injection>
  </component>
</application>